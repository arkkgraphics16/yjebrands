---
import BaseLayout from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import TalentGrid from '../components/TalentGrid.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
import FeaturedShowcase from '../components/FeaturedShowcase.astro';
import FilterPanel from '../components/FilterPanel.astro';
import SideTabs from '../components/SideTabs.astro';
---
<BaseLayout>
  <div class="grid gap-6 px-4 py-6 sm:px-6 lg:px-10">
    <div
      class="grid gap-6 lg:grid-cols-[260px_minmax(0,1fr)] lg:auto-rows-min xl:grid-cols-[300px_minmax(0,1fr)_300px] xl:gap-8"
    >
      <div class="lg:row-span-6">
        <Header />
      </div>

      <div class="lg:col-start-2 xl:col-start-2">
        <Hero />
      </div>

      <div class="lg:col-start-2 xl:col-start-2">
        <FeaturedShowcase />
      </div>

      <div class="lg:col-start-2 xl:col-start-3 xl:row-span-2">
        <FilterPanel />
      </div>

      <div class="lg:col-start-2 xl:col-start-3 xl:row-span-3">
        <SideTabs />
      </div>

      <div class="lg:col-start-2 xl:col-start-2">
        <Section
          kicker="Who We Are"
          title="We build brands for cosplayers who dare."
          headline="We sculpt raw identities, architect merch lines, and choreograph digital stunts that split the algorithm."
          class="h-full"
        >
          <div class="grid gap-8 lg:grid-cols-2">
            <div class="space-y-4 text-sm text-ink-soft">
              <p>
                We’re a squad of brand tacticians, visual agitators, and fandom strategists born from the convention floor. We
                bridge underground aesthetics with commercial muscle so bold performers can own their universes.
              </p>
              <p>
                Our playbook smashes together campaign ideation, sponsorship choreography, wardrobe fabrication, and platform
                audits. If you’re ready to amplify the rebellion, we’re the comms tower.
              </p>
            </div>
            <div class="space-y-4 text-sm text-ink-soft">
              <ul class="space-y-3 text-xs uppercase tracking-mega">
                <li class="flex items-center gap-3">
                  <span class="h-2 w-6 bg-ink"></span>
                  Identity Systems
                </li>
                <li class="flex items-center gap-3">
                  <span class="h-2 w-6 bg-brand"></span>
                  Sponsorship Labs
                </li>
                <li class="flex items-center gap-3">
                  <span class="h-2 w-6 bg-brand-dark"></span>
                  Immersive Pop-Ups
                </li>
                <li class="flex items-center gap-3">
                  <span class="h-2 w-6 bg-ink"></span>
                  Visual Direction
                </li>
              </ul>
              <div class="rounded border border-dashed border-ink/40 p-4 text-[0.7rem] uppercase tracking-mega text-ink-muted">
                Currently assembling: Riot Chorus world tour identities + companion merch drops.
              </div>
            </div>
          </div>
        </Section>
      </div>

      <div class="lg:col-start-2 xl:col-start-2">
        <TalentGrid />
      </div>

      <div class="lg:col-start-2 xl:col-start-2">
        <CTA />
      </div>

      <div class="lg:col-span-2 xl:col-span-3">
        <Footer />
      </div>
    </div>
  </div>
</BaseLayout>
