---
const navLinks = [
  { label: 'Home Base', href: '/' },
  { label: 'Studio Profile', href: '/about' },
  { label: 'Talent Roster', href: '#talent' },
  { label: 'Contact', href: '#contact' }
];

const socials = [
  { label: 'Instagram', href: 'https://instagram.com/yjebrands' },
  { label: 'Messenger', href: 'https://m.me/yjebrands' },
  { label: 'TikTok', href: 'https://tiktok.com/@yjebrands' }
];
---
<header class="flex h-full flex-col gap-10 border-[6px] border-ink bg-brand-light p-8 sm:p-10">
  <div class="space-y-2">
    <a href="/" class="inline-flex text-xl font-display uppercase tracking-tightest text-ink">
      YJE Brands
    </a>
    <p class="max-w-sm text-sm uppercase tracking-mega text-ink">
      Cosplay brand architecture studio crafting cult-classic identities.
    </p>
  </div>

  <nav class="flex flex-col gap-4 text-base font-medium uppercase tracking-mega">
    {navLinks.map(({ href, label }) => (
      <a
        href={href}
        class="group flex items-center gap-4 text-ink hover:text-brand"
      >
        <span class="h-2 w-10 shrink-0 bg-ink"></span>
        <span class="group-hover:translate-x-1 transition-transform">{label}</span>
      </a>
    ))}
  </nav>

  <div class="space-y-4">
    <p class="text-sm uppercase tracking-mega text-ink">Follow the signal</p>
    <ul class="flex flex-col gap-3 text-base uppercase tracking-mega">
      {socials.map(({ href, label }) => (
        <li>
          <a href={href} class="group flex items-center gap-4 text-ink hover:text-brand" target="_blank" rel="noreferrer">
            <span class="flex h-8 w-8 items-center justify-center rounded-full border border-ink bg-brand text-xs font-semibold text-white">
              {label[0]}
            </span>
            {label}
          </a>
        </li>
      ))}
    </ul>
  </div>

  <div class="mt-auto space-y-2 border-t-[6px] border-ink pt-6 text-sm uppercase tracking-mega text-ink">
    <p>Worldwide studio â€” Operating 24/7</p>
    <p id="contact">hello@yjebrands.com</p>
  </div>
</header>
