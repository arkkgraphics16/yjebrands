---
const navLinks = [
  { label: 'Home Base', href: '/' },
  { label: 'Studio Profile', href: '/about' },
  { label: 'Talent Roster', href: '#talent' },
  { label: 'Contact', href: '#contact' }
];

const socials = [
  { label: 'Instagram', href: 'https://instagram.com/yjebrands', handle: '@yjebrands' },
  { label: 'Messenger', href: 'https://m.me/yjebrands', handle: 'Chat Live' },
  { label: 'TikTok', href: 'https://tiktok.com/@yjebrands', handle: '@yjebrands' }
];
---
<header class="flex h-full flex-col gap-10 border-[12px] border-ink bg-brand-light p-8 sm:p-10">
  <div class="space-y-2">
    <a href="/" class="inline-flex text-xl font-display uppercase tracking-tightest text-ink">
      YJE Brands
    </a>
    <p class="max-w-sm text-sm uppercase tracking-mega text-ink">
      Cosplay brand architecture studio crafting cult-classic identities.
    </p>
  </div>

  <nav class="flex flex-col gap-4 text-base font-medium uppercase tracking-mega">
    {navLinks.map(({ href, label }) => (
      <a
        href={href}
        class="group flex items-center gap-4 text-ink hover:text-brand"
      >
        <span class="h-2 w-10 shrink-0 bg-ink"></span>
        <span class="group-hover:translate-x-1 transition-transform">{label}</span>
      </a>
    ))}
  </nav>

  <div class="space-y-4">
    <p class="text-sm uppercase tracking-mega text-ink">Follow the signal</p>
    <ul class="flex flex-col gap-3 text-base uppercase tracking-mega">
      {socials.map(({ href, label, handle }) => (
        <li>
          <a href={href} class="group flex items-center justify-between gap-4 text-ink hover:text-brand" target="_blank" rel="noreferrer">
            <span class="flex items-center gap-3">
              <span class="flex h-8 w-8 items-center justify-center rounded-full border border-ink text-xs font-semibold">{label[0]}</span>
              {label}
            </span>
            <span class="text-sm font-medium uppercase tracking-mega text-ink group-hover:text-ink">{handle}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <a
    href="https://m.me/yjebrands"
    class="group relative overflow-hidden border-[12px] border-ink bg-brand px-8 py-8 text-left text-base uppercase tracking-mega text-ink"
  >
    <span class="relative z-10 block font-display text-2xl uppercase tracking-tightest">Get a Quote</span>
    <span class="relative z-10 block text-sm text-ink">Instant Messenger consult</span>
    <span
      aria-hidden="true"
      class="absolute inset-y-0 right-0 flex w-16 items-center justify-center border-l-[12px] border-ink bg-ink text-white transition-transform group-hover:translate-x-2"
    >
      ↗
    </span>
  </a>

  <div class="mt-auto space-y-2 border-t-[12px] border-ink pt-6 text-sm uppercase tracking-mega text-ink">
    <p>Worldwide studio — Operating 24/7</p>
    <p id="contact">hello@yjebrands.com</p>
  </div>
</header>
