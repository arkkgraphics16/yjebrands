---
const socials = [
  {
    name: 'Instagram',
    href: 'https://instagram.com',
    icon: '<path d="M7 3h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7a4 4 0 0 1 4-4zm10 4h.01M12 12a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z" />'
  },
  {
    name: 'Facebook',
    href: 'https://facebook.com',
    icon: '<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />'
  },
  {
    name: 'TikTok',
    href: 'https://tiktok.com',
    icon: '<path d="M21 7.5a5.5 5.5 0 0 1-5.5-5.5h-3v15a3 3 0 1 1-3-3" />'
  },
  {
    name: 'Email',
    href: 'mailto:hello@yjebrands.com',
    icon: '<path d="m4 6 8 6 8-6" /><rect width="20" height="16" x="2" y="4" rx="2" />'
  }
];
---
<footer class="brutal-border border-black bg-[#f5f5f5] px-4 py-10 sm:px-6 lg:px-12">
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-12">
    <div class="space-y-3 lg:col-span-6">
      <span class="font-['Space_Grotesk'] text-xs uppercase tracking-[0.32em] text-black/60">YJE BRANDS</span>
      <p class="max-w-sm text-xs uppercase tracking-[0.28em] text-black/60 sm:text-sm sm:tracking-[0.3em]">Brutalist cosplay talent branding agency.</p>
      <p class="text-[0.7rem] text-black/50 sm:text-xs">Â© {new Date().getFullYear()} YJE Brands. All resistance reserved.</p>
    </div>
    <div class="flex flex-wrap items-start gap-3 sm:gap-4 lg:col-span-6">
      {socials.map((social) => (
        <a
          href={social.href}
          class="flex items-center gap-2 border border-black bg-white px-3 py-2 text-[0.65rem] uppercase tracking-[0.24em] transition hover:bg-[#e53935] hover:text-white sm:px-4 sm:text-xs sm:tracking-[0.3em]"
          target="_blank"
          rel="noreferrer"
        >
          <span class="inline-flex h-4 w-4 items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
            >
              <g set:html={social.icon} />
            </svg>
          </span>
          {social.name}
        </a>
      ))}
    </div>
  </div>
</footer>
