---
const socials = [
  {
    name: 'Instagram',
    href: 'https://instagram.com/yjebrands',
    icon: '<path d="M7 3h10a4 4 0 0 1 4 4v10a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4V7a4 4 0 0 1 4-4zm10 4h.01M12 12a3 3 0 1 0 0 6 3 3 0 0 0 0-6Z" />'
  },
  {
    name: 'Facebook',
    href: 'https://facebook.com/yjebrands',
    icon: '<path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />'
  },
  {
    name: 'TikTok',
    href: 'https://tiktok.com/@yjebrands',
    icon: '<path d="M21 7.5a5.5 5.5 0 0 1-5.5-5.5h-3v15a3 3 0 1 1-3-3" />'
  },
  {
    name: 'Email',
    href: 'mailto:hello@yjebrands.com',
    icon: '<path d="m4 6 8 6 8-6" /><rect width="20" height="16" x="2" y="4" rx="2" />'
  }
];
---
<footer class="flex flex-col gap-10 border-[6px] border-ink bg-brand-light px-8 py-14 sm:px-12 lg:px-16">
  <div class="grid grid-cols-1 gap-8 lg:grid-cols-12">
    <div class="space-y-3 lg:col-span-6">
      <span class="font-display text-sm uppercase tracking-mega text-ink">YJE BRANDS</span>
      <p class="max-w-sm text-sm uppercase tracking-mega text-ink sm:text-base">Brutalist cosplay talent branding agency.</p>
      <p class="text-sm text-ink sm:text-base">© {new Date().getFullYear()} YJE Brands. All resistance reserved.</p>
    </div>
    <div class="flex flex-wrap items-start gap-3 sm:gap-4 lg:col-span-6">
      {socials.map((social) => (
        <a
          href={social.href}
          class="flex items-center gap-3 border-[5px] border-ink bg-brand-light px-4 py-3 text-sm uppercase tracking-mega text-ink transition-colors hover:bg-ink hover:text-white sm:px-5"
          target="_blank"
          rel="noreferrer"
        >
          <span class="inline-flex h-5 w-5 items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-5 w-5"
            >
              <g set:html={social.icon} />
            </svg>
          </span>
          {social.name}
        </a>
      ))}
    </div>
  </div>
  <div class="text-sm uppercase tracking-mega text-ink">
    Orbiting Manila · Los Angeles · Neo Tokyo
  </div>
</footer>
