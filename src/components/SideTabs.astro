---
const tabs = [
  {
    label: 'Studio',
    description: 'Inside the war room and workshop.',
    href: '/studio'
  },
  {
    label: 'Stories',
    description: 'Field notes from live activations.',
    href: '/stories'
  },
  {
    label: 'Supply',
    description: 'Limited drops and collab kits.',
    href: '/supply'
  }
];
---
<section class="flex h-full flex-col gap-6 border-[12px] border-ink bg-brand-light p-8 sm:p-12">
  <header class="flex flex-col gap-2">
    <span class="text-sm uppercase tracking-mega text-ink">Explore</span>
    <h2 class="font-display text-4xl uppercase tracking-tightest">Side Channels</h2>
  </header>
  <ul class="flex flex-col divide-y-[12px] divide-ink">
    {tabs.map(({ label, description, href }) => (
      <li class="py-6 first:pt-0 last:pb-0">
        <a href={href} class="group flex items-center justify-between gap-6 text-left text-base uppercase tracking-mega text-ink">
          <span class="flex flex-col gap-2">
            <span class="font-display text-2xl uppercase tracking-tightest">{label}</span>
            <span class="text-sm uppercase tracking-mega text-ink">{description}</span>
          </span>
          <span class="flex h-12 w-12 items-center justify-center rounded-full border-[6px] border-ink text-sm transition-transform group-hover:translate-x-1 group-hover:bg-ink group-hover:text-white">
            â†—
          </span>
        </a>
      </li>
    ))}
  </ul>
</section>
