---
const { title, headline, kicker, class: className = '', children } = Astro.props;
---
<section class={`flex flex-col gap-12 border-[12px] border-ink bg-brand-light px-8 py-14 sm:px-12 lg:px-16 ${className}`}>
  {title && (
    <header class="flex flex-col gap-3">
      {kicker && <span class="text-sm uppercase tracking-mega text-ink">{kicker}</span>}
      <h2 class="font-display text-4xl font-semibold uppercase leading-[0.88] tracking-tightest sm:text-5xl lg:text-6xl">
        {title}
      </h2>
      {headline && <p class="max-w-2xl text-lg text-ink sm:text-xl">{headline}</p>}
    </header>
  )}
  <div class="space-y-8 text-lg text-ink sm:text-xl">{children}</div>
</section>
